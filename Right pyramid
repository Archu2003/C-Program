#include<stdio.h>
int main()
{
    int n,row,col,space;
    printf("enter the number of rows:");
    scanf("%d",&n);
    for(row=1;row<=n;row++)
    {
        for(col=1;col<=n-row;col++)
        {
            printf(" ");
        }
        for(space=1;space<=row;space++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
